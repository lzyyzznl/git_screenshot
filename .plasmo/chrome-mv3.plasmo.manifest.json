{
  "icons": {
    "16": "./gen-assets/icon16.plasmo.png",
    "32": "./gen-assets/icon32.plasmo.png",
    "48": "./gen-assets/icon48.plasmo.png",
    "64": "./gen-assets/icon64.plasmo.png",
    "128": "./gen-assets/icon128.plasmo.png"
  },
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "./gen-assets/icon16.plasmo.png",
      "32": "./gen-assets/icon32.plasmo.png",
      "48": "./gen-assets/icon48.plasmo.png",
      "64": "./gen-assets/icon64.plasmo.png",
      "128": "./gen-assets/icon128.plasmo.png"
    },
    "default_popup": "./popup.html"
  },
  "version": "1.0.0",
  "author": "GifShot Team",
  "name": "GifShot - 屏幕录制 GIF 插件",
  "description": "一键录制屏幕并生成 GIF 动图",
  "background": {
    "service_worker": "./static/background/index.ts"
  },
  "permissions": [
    "activeTab",
    "desktopCapture",
    "storage",
    "downloads",
    "tabCapture",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/gif.worker.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
